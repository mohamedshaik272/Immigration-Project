<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" fx:controller="org.immigration.project.DataEntryFormController">
    <children>
        <MenuBar prefHeight="20.0" prefWidth="793.0" VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Open from Inbox" />
                        <Menu mnemonicParsing="false" text="Open Recent" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Close" />
                        <MenuItem mnemonicParsing="false" text="Send for Approval" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Quit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About  IDR" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <TitledPane animated="false" layoutX="50.0" layoutY="50.0" prefHeight="300.0" prefWidth="500.0" text="Data Base Entry Form">
            <content>
                <AnchorPane prefHeight="180.0" prefWidth="200.0">
                    <children>
                        <GridPane hgap="10.0" layoutX="50.0" layoutY="20.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <TextField fx:id="nameField" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <TextField fx:id="emailField" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <DatePicker fx:id="datePicker" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label text="Country:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                <TextField fx:id="countryField" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            </children>
                        </GridPane>
                        <Button text="Submit" layoutX="250.0" layoutY="230.0" onAction="#handleSubmitButtonAction" />
                    </children>
                </AnchorPane>
            </content>
        </TitledPane>
        <Button text="Back"/>
    </children>
</VBox>
